@{
    <h1>Add new movie</h1>

    /// Post metodusban elküldjük az formot
    /// asp-action: rámutat a controllerben lévő actionre
    /// asp-items a paraméterként megkapott listát rendeliu a legördülő menühöz
    /// name: a modelbinder segítségével hozzárendeli a megfelelő propertikhez az értékeket
    ///
    <form asp-action="CreateMovie" method="post">
        
        
        <div class="input-group mb-4 offset-4">
            <input id="inp" class="form-control" type="text" name="Title" placeholder="Type the movie title" />
            
        </div>

        <label for="inp1" class="form-label">más valami</label>

        <div name="inp1" class="input-group mb-4 offset-4">

            <select class="select-category" name="SelectedCategories[]" multiple="multiple" asp-items="Model" data-placeholder="SelectCategories">
                    
                </select>
            <button type="submit">submit</button>
        </div>
    </form>

}
