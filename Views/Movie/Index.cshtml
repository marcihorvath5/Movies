@model List<Filmek.Models.Movie>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@

<table>
    <tbody>

        @{
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Title</td>
                    <td>@foreach (var m in item.MovieCategories )
                        {                         
                            <p>@m.Category.Name, </p>
                        }
                    </td>
                    @* <td>
                        @item.Length perc
                    </td> *@
                    <td>
                        @item.Year
                    </td>
                    <td>
                        @item.Publisher
                    </td>
                    <td>@Html.ActionLink("Details","GetMovie",new {id = item.Id})</td>
                    <td>@Html.ActionLink("Edit", "Edit", new { id = item.Id })</td>
                </tr>
            }
 }
    </tbody>
</table>
